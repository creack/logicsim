# EditorConfig is awesome: https://EditorConfig.org.

# Top EditorConfig file, set to true to stop .editorconfig files search on current file.
root = true

# Defaults #
############

[*]

# Always use unix end of line.
end_of_line = lf

# Always insert a new line at the end of files.
insert_final_newline = true

# Don't leave trailing whitespaces.
trim_trailing_whitespace = true

# Default to utf8 encoding.
charset = utf-8

# Space > tab for consistent aligns.
indent_style = space

# Default to 2 spaces for indent/tabs.
indent_size = 2

# Flag long lines.
max_line_length = 160

# Explicit per file type #
##########################

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size  = 2

[*.json]
indent_style = space
indent_size  = 2

[*.{yml,yaml}]
indent_style = space
indent_size  = 2

[*.md]
max_line_length = 0 # Don't check line lenghts in files.
trim_trailing_whitespace = false # Allow trailing whitespaces.

[{Makefile,*.mk}]
indent_style = tab
indent_size  = 8

[{Dockerfile,Dockerfile.*}]
indent_size = 4
